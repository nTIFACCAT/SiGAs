<!DOCTYPE html>
<html lang="en">
    <head>        
        <!-- META SECTION -->
        <title>SiGAs FACCAT - Sistema de Gestão para Associações</title>            
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!-- END META SECTION -->
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        
        <link rel="icon" href="<%= image_path("favicon.ico")%>" type="image/x-icon" />
                                          
    </head>
    <body>
        <!-- START PAGE CONTAINER -->
        <div class="page-container">
            
            <!-- START PAGE SIDEBAR -->
            <div class="page-sidebar">
                <!-- START X-NAVIGATION -->
                <ul class="x-navigation">
                    <li class="xn-logo">
                        <a href="index.html"><img class="logosigas" src="<%= image_path("logo_sigas.png")%>" alt="SiGAs Faccat"/></a>
                        <a href="#" class="x-navigation-control"></a>
                    </li>
                    <li class="xn-profile">
                        <a href="#" class="profile-mini">
                            <img src="<%= image_path("logo.png")%>" alt="SUCI"/>
                        </a>
                        <div class="profile profile-white">
                            <div class="profile-image">
                                <img src="<%= image_path("logo.png")%>" alt="SUCI"/>
                            </div>
                        </div>                                                                        
                    </li>
                    <li class="xn-title">MENU</li>
                    <li>
                        <%= link_to dashboards_path do %>
                          <span class="fa fa-desktop"></span> <span class="xn-text">Dashboard</span>
                        <% end %>                        
                    </li>
                    <li>
                        <%= link_to associates_path do %>
                          <span class="fa fa-users"></span> <span class="xn-text">Sócios</span>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to associates_path do %>
                          <span class="fa fa-usd"></span> <span class="xn-text">Financeiro</span>
                        <% end %> 
                    </li>
                    <li class="xn-openable">
                        <a href="#"><span class="fa fa-gears"></span> <span class="xn-text">Configurações</span></a>
                        <ul>
                            <li>
                               <%= link_to users_path do %>
                                  <span class="fa fa-key"></span> Usuários
                               <% end %> 
                            </li>
                            <li>
                              <%= link_to associates_path do %>
                                <span class="fa fa-cubes"></span> Preferências</a>
                              <% end %>   
                            </li>
                               
                        </ul>
                    </li>
                </ul>
                <!-- END X-NAVIGATION -->
            </div>
            <!-- END PAGE SIDEBAR -->
            
            <!-- PAGE CONTENT -->
            <div class="page-content">
                
                <!-- START X-NAVIGATION VERTICAL -->
                <ul class="x-navigation x-navigation-horizontal x-navigation-panel">
                    <!-- USUARIO -->
                    <li class="xn-icon-button pull-right">
                        <a href="#"><span class="fa fa-user"></span></a>
                         <div class="panel panel-primary animated zoomIn xn-drop-left xn-panel-dragging">
                            <div class="panel-heading">
                                <h3 class="panel-title"><img src="img/logo-small-grey@2x.png" > Mauricio Baum Jr</h3> 
                            </div>
                            <div class="panel-footer text-center">
                                <!-- SIGN OUT -->
                                <a href="#" class="mb-control" data-box="#mb-signout">Logout</a> 
                                <!-- END SIGN OUT -->
                            </div>                            
                        </div>                        
                    </li>

                    <!-- END USER -->
                    <!-- NOTIFICAÇOES -->
                    <li class="xn-icon-button pull-right">
                        <a href="#"><span class="fa fa-exclamation-triangle"></span></a>
                        <div class="informer informer-warning">4</div>
                        <div class="panel panel-primary animated zoomIn xn-drop-left xn-panel-dragging">
                            <div class="panel-heading">
                                <h3 class="panel-title"><span class="fa fa-exclamation-triangle"></span> Notifiações</h3>                                
                                <div class="pull-right">
                                    <span class="label label-danger">4 new</span>
                                </div>
                            </div>
                            <div class="panel-body list-group list-group-contacts scroll" style="height: 200px;">
                                <a href="#" class="list-group-item">
                                    <div class="list-group-status status-online"></div>
                                    <img src="assets/images/users/user2.jpg" class="pull-left" alt="John Doe"/>
                                    <span class="contacts-title">John Doe</span>
                                    <p>Praesent placerat tellus id augue condimentum</p>
                                </a>
                                <a href="#" class="list-group-item">
                                    <div class="list-group-status status-away"></div>
                                    <img src="assets/images/users/user.jpg" class="pull-left" alt="Dmitry Ivaniuk"/>
                                    <span class="contacts-title">Dmitry Ivaniuk</span>
                                    <p>Donec risus sapien, sagittis et magna quis</p>
                                </a>
                                <a href="#" class="list-group-item">
                                    <div class="list-group-status status-away"></div>
                                    <img src="assets/images/users/user3.jpg" class="pull-left" alt="Nadia Ali"/>
                                    <span class="contacts-title">Nadia Ali</span>
                                    <p>Mauris vel eros ut nunc rhoncus cursus sed</p>
                                </a>
                                <a href="#" class="list-group-item">
                                    <div class="list-group-status status-offline"></div>
                                    <img src="assets/images/users/user6.jpg" class="pull-left" alt="Darth Vader"/>
                                    <span class="contacts-title">Darth Vader</span>
                                    <p>I want my money back!</p>
                                </a>
                            </div>     
                            <div class="panel-footer text-center">
                                <a href="index.html">Exibir todas notificações</a>
                            </div>                            
                        </div>                        
                    </li>
                    <!-- END NOTIFICAÇÔES -->
                    
                </ul>
                <!-- END X-NAVIGATION VERTICAL -->
                <%= yield %>
        </div>
                
                
                
                
                
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> 

                

        <!-- START PRELOADS -->
        <!--audio id="audio-alert" src="audio/alert.mp3" preload="auto"></audio>
        <audio id="audio-fail" src="audio/fail.mp3" preload="auto"></audio>
        <!-- END PRELOADS -->                  
        
           
    </body>
</html>
