<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li>
      <%= link_to dashboards_path do %>
        Início
      <% end %>  
    </li>  
    <li>Sócios</li>                  
    <li>
      <%= link_to associates_path do %>
        Quadro Social
      <% end %>
    </li>
    <li class="active">Exibir Cobrança</li>
</ul>
<!-- END BREADCRUMB -->   

<div class="page-content-wrap">
    <div class="col-md-12">
      
      <div class="col-md-12">
			<%= form_for @charge, html: {class: "form-horizontal"} do |f| %>
           <div class="row">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      <h3 class="panel-title">Descrição da Cobrança</h3>
                  </div>
                  <div class="panel-body">
                    
                    <div class="col-md-6">
                      <p> <strong>Descrição: </strong> <%= @charge.description + " (" + @charge.associate.name  + ")" %> <br />
                          <strong>Valor: </strong> <%= @charge.print_value %> <br />
                          <div class="row"><strong>Vencimento: </strong> <%= f.text_field :due_date, id: :due_date, class: 'form-control datepicker'%></div><br />
                      </p>
                    </div>
                    
                    <div class="panel-body">
                    <h4 class="text-title">Dados do Pagamento</h4>
                    <div class="row" id="direction_roles_list">
                      
                        <div class="form-group">
                          <label class="col-md-2 control-label"><strong>Data do Pagamento: </strong></label>
                          <div class="col-md-2">                                            
                              <%= f.text_field :pay_date, id: :pay_date, class: 'form-control datepicker'%>
                          </div>
                        </div>
                        
                        <div class="form-group">
                          <label class="col-md-2 control-label"><strong>Acréscimos: </strong></label>
                          <div class="col-md-2">                                            
                            <%= f.text_field :additions, id: :additions, class: 'form-control'%>
                          </div>
                        </div>
                        
                        <div class="form-group">
                          <label class="col-md-2 control-label"><strong>Descontos: </strong></label>
                          <div class="col-md-2">                                            
                            <%= f.text_field :discounts, id: :discounts, class: 'form-control'%>
                          </div>
                        </div>
                        
                        <div class="form-group">
                          <label class="col-md-2 control-label"><strong>Forma de Pagamento: </strong></label>
                          <div class="col-md-2">                                            
                            <%= f.text_field :payment_form, id: :payment_form, class: 'form-control'%>
                          </div>
                        </div>
                        
                        <div class="form-group">
                          <label class="col-md-2 control-label"><strong>Observação: </strong></label>
                          <div class="col-md-2">                                            
                            <%= f.text_field :obs, id: :obs, class: 'form-control'%>
                          </div>
                        </div>
                        
                        <div class="form-group">
                          <div class="col-md-2"></div>
                            <div class="col-md-4">
                                <button onclick="event.preventDefault();window.history.back();" class="btn btn-block btn-lg btn-danger"> Cancelar </button>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-block btn-lg btn-info"> Salvar </button>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                    
                  </div>
             </div>
           </div>
           
    </div> 
</div>